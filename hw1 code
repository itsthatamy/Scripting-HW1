<h2>Welcome User! What's your name?</h2>

<button type="button">Current player: Amy</button>
  
<script>
  const button = document.querySelector("button");

button.addEventListener("click", updateName);

function updateName() {
	const name = prompt("Enter a new player name");
  button.textContent = `Current player: ${name}`;
}
</script>
  
